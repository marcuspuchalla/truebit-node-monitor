# Docker Configuration
# For local development, leave empty to use default Docker socket
# For CooleyFi deployment, this will be handled via volume mount
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Target container name (from docker-compose.yml)
CONTAINER_NAME=runner-node

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Database
DB_PATH=./data/truebit-monitor.db

# Log retention (days)
LOG_RETENTION_DAYS=30
